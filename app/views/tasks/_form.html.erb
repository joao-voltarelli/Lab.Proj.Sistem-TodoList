<%= form_with model: task, local: true do |form| %>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <%= task.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </p>

    <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
        <%= task.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </p>

    <p>
        <%= form.label :due %><br>
        <%= form.text_field :due %>
        <%= task.errors.full_messages_for(:due).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </p>

    <p>
        <%= form.label :done %><br>
        <%= form.text_field :done %>
        <%= task.errors.full_messages_for(:done).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>